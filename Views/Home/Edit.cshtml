@model Product;
@{
    ViewData["Title"] = "Edit Form";
}
<form asp-controller="Home" asp-action="Edit" method="post" enctype="multipart/form-data" >
    <div asp-validation-summary="All"></div>
    <input type="hidden" asp-for = "ProductId" >
    <div class="mb-3">
        <label for="Name" class="form-label">Name</label>
        <input type="text" asp-for="Name" class="form-control" >
        <span asp-validation-for="Name"></span>

    </div>
    <div class="mb-3">
        <label for="Price" class="form-label">Price</label>
        <input type="text" asp-for="Price" class="form-control">
        <span asp-validation-for="Price"></span>


    </div>
    <div class="input-group mb-3">
        <input type="file" name="imageFile" id="imageFile" class="form-control">


    </div>
    <div>
        <img src="~/img/@Model.Image" alt="" srcset="" width="100px" >
        <input type="hidden" asp-name="@Model.Image" >
    </div>
    <div class="mb-3">
        <label for="CategoryId" class="form-label">Category</label>
        <select class="form-select" asp-items="ViewBag.Categories" asp-for="CategoryId">
            <option value="">Hepsi</option>


        </select>
        <span asp-validation-for="CategoryId"></span>


    </div>
    <div class="mb-3 form-check">
        <input type="checkbox" asp-for="IsActive" class="form-check-input">

        <label for="IsActive" class="form-check-label" >Is Active</label>
        <span asp-validation-for="IsActive"></span>

    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>